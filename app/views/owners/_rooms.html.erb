<% if rooms.empty? %>
  <h3> There are no rooms </h3>
<% else %>
  <h3>Your Rooms</h3>

  <table >
    <tr>
      <th> Room </th>
      <th> Price </th>
      <th> Guest </th>
    </tr>
    <% rooms.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.price %></td>
        <td>
          <% if r.guest %>
            <%= link_to r.guest.name, guest_dashboard_path(r.guest) %>
          <% else %>
            available
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to "New room", new_owner_room_path(@owner)  %>  
